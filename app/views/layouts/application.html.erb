<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/head" %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <% flash.each do |flash_type, message| %>
            <div class="alert alert-<%= "#{flash_type}" %>"><%= message %></div>
          <% end %>
        </div>
      </div>
      <%= render "layouts/header" %>
      <%= yield %>
    </div>
  </body>
</html>
