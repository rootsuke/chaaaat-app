<div class="user flex">
  <div class="picture">
    <%= image_tag friend_request.requester.picture.thumb.url, class: "radius", width: "40px" %>
  </div>
  <div class="name">
    <h4><%= link_to friend_request.requester.name, user_path(friend_request.requester.user_id) %></h4>
  </div>
  <div>
    <%= form_with(model: friend_request) do |f| %>
      <%= f.submit "Approve Friend Request", class: "btn btn-success", id: "request-btn" %>
    <% end %>
  </div>
</div>
